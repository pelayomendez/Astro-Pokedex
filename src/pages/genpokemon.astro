---
import Layout from '../layouts/Layout.astro';
import GenPokemon from '../components/GenPokemon.astro';
// import GenPokemonJS from '../components/GenPokemonJS.astro';

export const prerender = true
---

<Layout title="Pokedex">
   <GenPokemon server:defer >
      <p slot="fallback" class="loading">Loading...</p>
   </GenPokemon>
</Layout>

<style>
   .loading {
    font-size: 1.5em;
    color: #ff4500;
    text-align: center;
    margin-top: 20px;
   }
</style>